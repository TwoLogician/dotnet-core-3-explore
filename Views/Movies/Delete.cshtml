@model MovieInfo

@{
    ViewData["Title"] = "Delete Movie";
}

<h2>Delete</h2>

<table class="table table-hover animated fadeIn">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>ReleaseDate</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Html.DisplayFor(x => x.Title)</td>
                <td>@Html.DisplayFor(x => x.ReleaseDate)</td>
                <td>@Html.DisplayFor(x => x.Genre)</td>
            </tr>
    </tbody>
</table>

<form asp-action="DeleteConfirm">
    <input type="hidden" asp-for="Id" />
    <a asp-action="Index" class="btn btn-light">Back</a>
    <input class="btn btn-danger" type="submit" value="Confirm" />
</form>